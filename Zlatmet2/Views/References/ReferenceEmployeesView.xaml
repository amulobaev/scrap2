<UserControl x:Class="Zlatmet2.Views.References.ReferenceEmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
             xmlns:classes="clr-namespace:Zlatmet2.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToolBar>
            <Button Content="Добавить" Command="{Binding AddItemCommand}" />
            <Button Content="Удалить" Command="{Binding RemoveItemCommand}" />
            <Separator />
            <Button Content="Сохранить изменения" Command="{Binding SaveCommand}" />
        </ToolBar>

        <telerik:RadGridView Grid.Row="1" AutoGenerateColumns="False" ShowGroupPanel="False" CanUserReorderColumns="False"
                             RowIndicatorVisibility="Collapsed" CanUserFreezeColumns="False" IsFilteringAllowed="False"
                             ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
            <!--<i:Interaction.Behaviors>
                <classes:ScrollIntoViewBehavior />
            </i:Interaction.Behaviors>-->
            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Фамилия, инициалы" Width="*"
                                            DataMemberBinding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                <telerik:GridViewDataColumn Header="Фамилия Имя Отчество" Width="*"
                                            DataMemberBinding="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />
                <telerik:GridViewDataColumn Header="Телефон" Width="*"
                                            DataMemberBinding="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />
            </telerik:RadGridView.Columns>
            <telerik:RadGridView.RowStyle>
                <Style TargetType="{x:Type telerik:GridViewRow}">
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChanged}" Value="True">
                            <Setter Property="FontWeight" Value="Bold" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </telerik:RadGridView.RowStyle>
        </telerik:RadGridView>
    </Grid>
</UserControl>
