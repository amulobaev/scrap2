<UserControl x:Class="Zlatmet2.Views.Reports.ReportOrganizationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:stimulsoft="clr-namespace:Stimulsoft.Report.Viewer;assembly=Stimulsoft.Report.Wpf"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="700">
    <UserControl.Resources>
        <CollectionViewSource Source="{Binding Nomenclatures}" x:Key="NomenclaturesCvs">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <HierarchicalDataTemplate x:Key="ContractorDataTemplate" ItemsSource="{Binding Divisions}">
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="3,0" IsChecked="{Binding IsChecked}" />
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToolBar Background="Transparent">
            <Button Content="Сформировать" Command="{Binding PrepareReportCommand}" />
        </ToolBar>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--Период отчёта-->
            <TextBlock Margin="3" Text="На период с:" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                <DatePicker Margin="3" Width="110" SelectedDate="{Binding DateFrom}" />
                <TextBlock Margin="3" Text="по:" VerticalAlignment="Center"  />
                <DatePicker Margin="3" Width="110" SelectedDate="{Binding DateTo}" />
            </StackPanel>

            <!--Поставщики-->
            <TextBlock Text="Поставщики:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="3" />
            <xctk:DropDownButton Grid.Row="1" Grid.Column="1" Content="Выбрать поставщиков"
                                 Margin="3" VerticalAlignment="Center" IsOpen="{Binding SuppliersIsOpen, Mode=TwoWay}" >
                <xctk:DropDownButton.DropDownContent>
                    <Grid Height="250">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TreeView Margin="3" ItemsSource="{Binding Suppliers}" Grid.ColumnSpan="3"
                                  ItemTemplate="{StaticResource ContractorDataTemplate}" />

                        <Button Grid.Row="1" Content="Выбрать все" Margin="3" Command="{Binding SelectAllBasesCommand}" />
                        <Button Grid.Row="1" Grid.Column="1" Content="Снять выбор" Margin="3" Command="{Binding UnselectAllBasesCommand}" />
                        <Button Grid.Row="1" Grid.Column="2" Content="Закрыть" Margin="3" Command="{Binding CloseSuppliersCommand}" />
                    </Grid>
                </xctk:DropDownButton.DropDownContent>
            </xctk:DropDownButton>

            <!--Заказчики-->
            <TextBlock Text="Заказчики:" Grid.Row="2" VerticalAlignment="Center" Margin="3" HorizontalAlignment="Right" />
            <xctk:DropDownButton Grid.Row="2" Grid.Column="1" Margin="3" VerticalAlignment="Center"
                                 Content="Выбрать заказчиков" IsOpen="{Binding CustomersIsOpen, Mode=TwoWay}">
                <xctk:DropDownButton.DropDownContent>
                    <Grid Height="250">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TreeView Margin="3" Grid.ColumnSpan="3" ItemsSource="{Binding Suppliers}"
                                  ItemTemplate="{StaticResource ContractorDataTemplate}" />

                        <Button Grid.Row="1" Content="Выбрать все" Margin="3" Command="{Binding SelectAllBasesCommand}" />
                        <Button Grid.Row="1" Grid.Column="1" Content="Снять выбор" Margin="3" Command="{Binding UnselectAllBasesCommand}" />
                        <Button Grid.Row="1" Grid.Column="2" Content="Закрыть" Margin="3" Command="{Binding CloseCustomersCommand}" />
                    </Grid>
                </xctk:DropDownButton.DropDownContent>
            </xctk:DropDownButton>

            <!--Номенклатура-->
            <TextBlock Grid.Row="3" Text="Номенклатура:" Margin="3" VerticalAlignment="Center" HorizontalAlignment="Right" />
            <xctk:CheckComboBox Grid.Row="3" Grid.Column="1" Margin="3" DisplayMemberPath="Name"
                                ItemsSource="{Binding Source={StaticResource NomenclaturesCvs}}"
                                SelectedItemsOverride="{Binding SelectedNomenclatures}" />
            <Button Grid.Row="3" Grid.Column="2" Content="Выбрать все" Width="75" Margin="3" Command="{Binding SelectAllNomenclatureCommand}" />
            <Button Grid.Row="3" Grid.Column="3" Content="Снять выбор" Width="75" Margin="3" Command="{Binding UnselectAllNomenclatureCommand}" />
        </Grid>

        <stimulsoft:StiWpfViewerControl x:Name="StiViewer" Grid.Row="2" Margin="3" />
    </Grid>
</UserControl>
