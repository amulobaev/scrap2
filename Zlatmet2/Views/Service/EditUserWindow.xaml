<Window x:Class="Zlatmet2.Views.Service.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="180" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Имя пользователя:" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <TextBox Grid.Column="1" Margin="3" x:Name="TextBoxLogin" />

        <TextBlock Grid.Row="1" Text="Пароль:" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <PasswordBox Grid.Row="1" Grid.Column="1" Margin="3" x:Name="PasswordBox" />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="3" Orientation="Horizontal">
            <Button x:Name="ButtonOk" Content="OK" Width="75" Margin="3" Click="ButtonOk_Click" />
            <Button x:Name="ButtonCancel" Content="Отмена" Width="75" Margin="3" Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
